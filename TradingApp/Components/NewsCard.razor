<div class="card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Source - @PublishedAt.ToString("MMM dd, yyyy")</h6>
        <p class="card-text">@Description</p>
        <a href="@Url" target="_blank" class="mt-auto btn btn-primary">
            Read More
        </a>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public string Url { get; set; } = string.Empty;
    [Parameter] public DateTime PublishedAt { get; set; }
    [Parameter] public string Source { get; set; } = "Unknown";
}