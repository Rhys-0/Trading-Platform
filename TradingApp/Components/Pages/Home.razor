@page "/"
@layout Layout.EmptyLayout

<PageTitle>Home - TradingApp</PageTitle>

<div class="home-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Welcome to TradingApp</h1>
            <p class="hero-subtitle">Your gateway to professional trading and investment opportunities</p>
            <div class="hero-buttons">
                <a href="/login" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Get Started
                </a>
                <a href="/register" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-person-plus"></i>
                    Create Account
                </a>
            </div>
        </div>
        <div class="hero-stats">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-graph-up text-success"></i>
                </div>
                <div class="stat-number">$2.4T</div>
                <div class="stat-label">Daily Volume</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-people text-info"></i>
                </div>
                <div class="stat-number">500K+</div>
                <div class="stat-label">Active Traders</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-globe text-warning"></i>
                </div>
                <div class="stat-number">150+</div>
                <div class="stat-label">Countries</div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features-section">
        <div class="container">
            <h2 class="section-title">Why Choose TradingApp?</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check text-success"></i>
                    </div>
                    <h3>Bank-Level Security</h3>
                    <p>Your funds and data are protected with enterprise-grade security measures.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-lightning text-warning"></i>
                    </div>
                    <h3>Real-Time Data</h3>
                    <p>Access live market data, charts, and analytics to make informed decisions.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-phone text-primary"></i>
                    </div>
                    <h3>Mobile Trading</h3>
                    <p>Trade anywhere, anytime with our responsive mobile trading application.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-headset text-info"></i>
                    </div>
                    <h3>24/7 Support</h3>
                    <p>Our expert team is available around the clock to assist you.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <div class="container">
            <h2 class="section-title">Quick Actions</h2>
            <div class="actions-grid">
                <a href="/dashboard" class="action-card">
                    <div class="action-icon">
                        <i class="bi bi-speedometer2"></i>
                    </div>
                    <h3>Dashboard</h3>
                    <p>View your portfolio and trading performance</p>
                </a>
                <a href="/stocks" class="action-card">
                    <div class="action-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h3>Stocks</h3>
                    <p>Browse and analyze stock opportunities</p>
                </a>
                <a href="/login" class="action-card">
                    <div class="action-icon">
                        <i class="bi bi-box-arrow-in-right"></i>
                    </div>
                    <h3>Login</h3>
                    <p>Access your trading account</p>
                </a>
                <a href="/register" class="action-card">
                    <div class="action-icon">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <h3>Register</h3>
                    <p>Create your trading account</p>
                </a>
            </div>
        </div>
    </div>
</div>

